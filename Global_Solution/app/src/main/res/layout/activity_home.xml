<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <!-- Card Cinza -->

    <LinearLayout
        android:id="@+id/container_gray"
        android:layout_width="185dp"
        android:layout_height="181dp"
        android:layout_marginTop="340dp"
        android:background="@drawable/card_background"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/icon_gray"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="start"
            android:src="@drawable/icon_arquivo"
            android:layout_marginBottom="8dp"/> <!-- Espaçamento abaixo da imagem -->

        <TextView
            android:id="@+id/title_gray"
            android:layout_width="87dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="Ver lista"
            android:textColor="@color/green"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/subtitle_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_light"
            android:text="veja todo o conteúdo que está na sua lista!"
            android:textColor="@color/green"
            android:textSize="14sp" />

    </LinearLayout>

    <!-- Card Amarelo -->

    <!-- Card Verde -->
    <LinearLayout
        android:id="@+id/container_yellow"
        android:layout_width="196dp"
        android:layout_height="170dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/card_background_yellow"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.032"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/icon_yellow"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="start"
            android:layout_marginBottom="8dp"
            android:src="@drawable/icon_file" /> <!-- Espaçamento abaixo da imagem -->

        <TextView
            android:id="@+id/title_yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="Inserir novos dados"
            android:textColor="@color/green"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/subtitle_yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_light"
            android:text="Tenha a possibilidade de inserir novos dados!"
            android:textColor="@color/green"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container_green"
        android:layout_width="195dp"
        android:layout_height="179dp"
        android:layout_marginTop="340dp"
        android:background="@drawable/card_background_gray"
        android:orientation="vertical"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.925"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/icon_green"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/icon_edit"
            android:layout_gravity="start"
            android:layout_marginBottom="8dp"/> <!-- Espaçamento abaixo da imagem -->

        <TextView
            android:id="@+id/title_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="Editar"
            android:textColor="@color/yellow"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/subtitle_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/poppins_light"
            android:text="Edite seus conteúdos quando quiser!  "
            android:textColor="@color/yellow"
            android:textSize="14sp" />

    </LinearLayout>

    <TextView
        android:id="@+id/textUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:fontFamily="@font/poppins_semibold"
        android:text="Olá Usuario"
        android:textColor="#848790"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.115"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.889"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/perfil" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="253dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="116dp"
        android:fontFamily="@font/poppins_light"
        android:text="Aqui estão algumas coisas que você pode fazer"
        android:textColor="#848790"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="144dp"
        android:layout_height="155dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="28dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/baseline_sensor_door_24" />

</androidx.constraintlayout.widget.ConstraintLayout>
